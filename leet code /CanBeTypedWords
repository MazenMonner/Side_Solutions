public class Solution {
    public int CanBeTypedWords(string text, string brokenLetters) 
    {
        string [] sen = text.Split(' ');
        int counter = 0 ; 
        bool broken = false;
        for (int i = 0 ; i < sen.Length ; i++) // words
        {
            broken = false; 
             for (int j = 0 ; j < sen[i].Length ; j++) // letters of every word
             {
                 for (int k = 0 ; k < brokenLetters.Length ; k++) // broken letters
                 {
                    if (brokenLetters[k]==sen[i][j] ) 
                    {
                        broken = true;
                        break ;
                    }
                 }

                if ( broken == true ) 
                    {
                        
                        break ;
                    }
             }

             if ( broken == true ) 
                    {
                        counter = counter + 1 ;
                    }

        }   

        return sen.Length - counter;
    }
}
